@model Cinema

@{
    ViewData["Title"] = "Add a New Cinema...";
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
        <h1>Add a New Cinema</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="my-4 text-center">
                    <img id="ImageUrlPreview" class="rounded-circle" style="max-width: 150px" />
                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="my-4">    
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="my-4">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="my-4">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="my-4">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function(){
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageUrl").val();s
        });

        $("#ImageUrl").on("input",function(){
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        });
    </script>
}