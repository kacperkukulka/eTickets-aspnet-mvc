@model Cinema

@{
    ViewData["Title"] = "Details of a Cinema...";
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
        <h1>Details for @Model.Name</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="my-4 text-center">
                    <img id="ImageUrlPreview" class="rounded-circle" style="max-width: 150px" />
                </div>
                <div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="my-4">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" readonly />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="my-4">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="my-4">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" readonly />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="my-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success float-end">Edit</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageUrl").val();
        });
    </script>
}